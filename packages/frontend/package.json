{
  "name": "frontend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite && pnpm run build-tw",
    "build": "tsc && vite build",
    "build-tw": "tailwind build -i ./src/input.css -o ./dist/output.css --watch",
    "format-check": "prettier --check --cache --parser typescript \"**/*.[tj]s?(x)\"",
    "preview": "vite preview"
  },
  "dependencies": {
    "@vitejs/plugin-vue": "^4.2.3",
    "vite": "^4.4.5",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "tailwindcss": "^3.3.3"
  }
}
